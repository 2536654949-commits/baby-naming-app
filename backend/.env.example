# 数据库配置 (Supabase)
# Transaction Pooler (用于应用连接) - 增加 connect_timeout
DATABASE_URL="postgresql://postgres.xxx:PASSWORD@aws-1-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true&connect_timeout=30"

# Session Pooler (用于迁移) - 增加 connect_timeout
DIRECT_URL="postgresql://postgres.xxx:PASSWORD@aws-1-us-east-1.pooler.supabase.com:5432/postgres?connect_timeout=30"
# 无数据库启动开关 (可选)
ALLOW_NO_DB="false"

# JWT配置
JWT_SECRET="baby-name-secret-key-2025-dev-only"
JWT_EXPIRES_IN="90d"

# AI服务配置（支持DeepSeek、OpenAI等兼容OpenAI API的服务）
AI_API_KEY="your-ai-api-key"
AI_API_URL="https://api.deepseek.com/v1/chat/completions"
AI_MODEL="deepseek-chat"
# 可选配置
# AI_API_TIMEOUT=60000
# AI_MAX_TOKENS=1200
# AI_TEMPERATURE=0.8
# AI_TOP_P=0.9

# 前端地址
FRONTEND_URL="http://localhost:5173"

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# 服务器配置
PORT=3000
NODE_ENV="development"
LOG_LEVEL="debug"

# Redis配置（可选，用于频率限制）
REDIS_URL="redis://localhost:6379"
